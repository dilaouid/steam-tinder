{
  "name": "steamwgp-server",
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.3",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "ts-node -r tsconfig-paths/register --transpile-only src/app.ts",
    "test": "npx jest",
    "dev": "concurrently -k \"tsc -w\" \"tsc-alias -w\" \"ts-node-dev --respawn --transpile-only --ignore-watch node_modules dist/app.js\"",
    "migrate": "tsx -r dotenv/config src/infrastructure/data/migrate.ts",
    "generate": "drizzle-kit generate --out src/infrastructure/data/migrations --schema src/infrastructure/data/schemas/index.ts --dialect postgresql",
    "studio": "drizzle-kit studio --config=src/config/drizzle.config.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/env": "^4.4.0",
    "@fastify/passport": "^2.5.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/session": "^10.9.0",
    "@fastify/websocket": "^8.3.1",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/passport": "^1.0.16",
    "@types/passport-steam": "^1.0.6",
    "@types/ws": "^8.5.12",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "fastify": "^4.28.1",
    "fastify-env": "2.0.0",
    "fastify-plugin": "^4.5.1",
    "fastify-sse-v2": "^3.1.2",
    "i18next": "^23.14.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.6.0",
    "passport-openid": "^0.4.0",
    "passport-steam": "^1.0.18",
    "pg": "^8.12.0",
    "pino": "^8.21.0",
    "pino-pretty": "^10.3.1",
    "postgres": "^3.4.4",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.16.5",
    "@types/pg": "^8.11.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "drizzle-kit": "0.24.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}
